@page
@model EditarImunologicoModel
@{
    ViewData["Title"] = "Criacao de Imunologico";
}


<script>
function validateForm() {
  if ($("[name='imunologico.Fabricante']")[0].value != "PFIZER" && $("[name='imunologico.Fabricante']")[0].value != "SINOVAC"  ) {
    alert("Fabricante (Poderá aceitar apenas PFIZER ou SINOVAC)");
    return false;
  }


  const anoAnterior = new Date().getFullYear()-1;
  
  if ($("[name='imunologico.AnoLote']")[0].value < anoAnterior) {
    alert("Ano do Lote deve ser maior ou igual ao ano anterior ( "+ anoAnterior +").");
    return false;
  }
  
}
</script>

<h1>Criar Imunológico</h1>

<form  method="post" onsubmit="return validateForm()">

<div>
    @Html.DisplayNameFor(model => model.imunologico.Id)
     @Html.TextBoxFor(model => model.imunologico.Id,htmlAttributes: new { @readonly = true }) 
</div>

<div>
    @Html.DisplayNameFor(model => model.imunologico.Fabricante)
     @Html.TextBoxFor(model => model.imunologico.Fabricante) 
</div>
 <div>
    @Html.DisplayNameFor(model => model.imunologico.AnoLote)
    @Html.TextBoxFor(model => model.imunologico.AnoLote, htmlAttributes: new{ @type="number"})
</div>

<button class="btn btn-primary btn-sx" type="submit">
    <i class="glyphicon glyphicon-edit"></i> Editar Imunológico
</button>
<a class="btn btn-success btn-sx" asp-page="/Imunologicos/Index"><i class="glyphicon glyphicon-backward"></i> Lista De Imunologicos</a>


</form>